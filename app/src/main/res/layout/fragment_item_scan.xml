            <HorizontalScrollView
                android:id="@+id/horizontalScrollView2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/lv_bin"
                app:layout_constraintTop_toBottomOf="@+id/lv_bin">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/dark_violet"
                        android:padding="8dp"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/White.Medium"
                            android:layout_width="180dp"
                            android:gravity="center_vertical"
                            android:paddingLeft="8dp"
                            android:text="@string/item_code_small"
                            android:layout_height="wrap_content" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="0dp"
                            android:background="@color/bg_grey" />

                        <TextView
                            style="@style/White.Medium"
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:text="@string/order_qty"
                            android:gravity="left" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="0dp"
                            android:background="@color/bg_grey" />

                        <TextView
                            android:layout_width="75dp"
                            style="@style/White.Medium"
                            android:gravity="center"
                            android:text="@string/scanned_qty"
                            android:layout_height="wrap_content" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="0dp"
                            android:background="@color/bg_grey" />

                        <TextView
                            android:layout_width="200dp"
                            style="@style/White.Medium"
                            android:gravity="center_vertical"
                            android:text="@string/remarks"
                            android:layout_height="wrap_content" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="0dp"
                            android:background="@color/bg_grey" />

                        <TextView
                            android:layout_width="150dp"
                            style="@style/White.Medium"
                            android:gravity="center_vertical"
                            android:text="@string/order_no"
                            android:layout_height="wrap_content" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="0dp"
                            android:background="@color/bg_grey" />

                        <TextView
                            style="@style/White.Medium"
                            android:layout_width="150dp"
                            android:gravity="center_vertical"
                            android:text="@string/from_location"
                            android:layout_height="wrap_content" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="0dp"
                            android:background="@color/bg_grey" />

                        <TextView
                            android:layout_width="120dp"
                            style="@style/White.Medium"
                            android:gravity="center_vertical"
                            android:text="@string/wh_location"
                            android:layout_height="wrap_content" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="0dp"
                            android:background="@color/bg_grey" />

                        <TextView
                            android:layout_width="180dp"
                            style="@style/White.Medium"
                            android:gravity="center_vertical"
                            android:text="@string/final_location_code"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerview_items"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rectangle_violet"
                        android:padding="1dp" />
                </LinearLayout>
            </HorizontalScrollView>

            <CheckBox
                android:id="@+id/checkBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                style="@style/BlackText.Medium"
                android:buttonTint="@color/green"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:text="@string/default_bin"
                android:textSize="12sp"
                app:layout_constraintBottom_toTopOf="@+id/lv_bin"
                app:layout_constraintEnd_toEndOf="@+id/lv_bin" />


            <TextView
                android:id="@+id/textView"
                style="@style/BlackText.Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/document_no"
                app:layout_constraintStart_toStartOf="@+id/textView31"
                app:layout_constraintTop_toBottomOf="@+id/textView31" />

            <TextView
                android:id="@+id/tv_document_no"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:fontFamily="@font/urbanist_medium"
                android:background="@drawable/white_rounded_rectangle"
                android:padding="8dp"
                android:textColor="@color/teal_blue"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/textView"
                app:layout_constraintTop_toBottomOf="@+id/textView" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_finish"
                style="@style/White.Large"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/yellow_rounded_rectangle"
                android:text="@string/finish"
                android:textAppearance="@android:style/TextAppearance"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView2" />

            <TextView
                android:id="@+id/textView22"
                style="@style/BlackText.Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/bincode_"
                app:layout_constraintStart_toStartOf="@+id/textView"
                app:layout_constraintTop_toBottomOf="@+id/lv_item_code" />

            <TextView
                android:id="@+id/textView27"
                style="@style/BlackText.Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/item_code_small"
                app:layout_constraintStart_toStartOf="@+id/textView"
                app:layout_constraintTop_toBottomOf="@+id/tv_document_no" />

            <LinearLayout
                android:id="@+id/lv_bin"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/white_rounded_rectangle"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/textView22"
                app:layout_constraintTop_toBottomOf="@+id/textView22">

                <EditText
                    android:id="@+id/edt_bin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:ems="10"
                    android:maxLength="20"
                    android:fontFamily="@font/urbanist_medium"
                    android:inputType="textCapCharacters"
                    android:padding="8dp"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/imageButtonBinSubmit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    app:srcCompat="@drawable/ic_baseline_keyboard_arrow_right_32" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lv_item_code"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/white_rounded_rectangle"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/textView27"
                app:layout_constraintTop_toBottomOf="@+id/textView27">

                <EditText
                    android:id="@+id/edt_item_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:ems="10"
                    android:maxLength="20"
                    android:fontFamily="@font/urbanist_medium"
                    android:inputType="textCapCharacters"
                    android:padding="8dp"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/imageButtonItemSubmit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    app:srcCompat="@drawable/ic_baseline_keyboard_arrow_right_32" />

            </LinearLayout>

            <TextView
                android:id="@+id/textView31"
                style="@style/VioletText.Large"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="@string/enter_the_details"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

