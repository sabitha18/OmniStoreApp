<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="@color/white">

    <ImageView
        android:id="@+id/imageViewBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:src="@drawable/ic_baseline_arrow_back_24" />

    <TextView
        android:id="@+id/txtApply"
        style="@style/BlackText.Regular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_gravity="end|center_horizontal|center_vertical"
        android:layout_marginEnd="@dimen/eight_dp"
        android:gravity="center_vertical|end|center_horizontal"
        android:padding="@dimen/five_dp"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/txtHead"
            style="@style/BlackText.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="Home"
            android:textAllCaps="true"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tvResultCount"
            style="@style/BlackText.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text=""
            android:textAllCaps="true"
            android:visibility="visible" />

    </LinearLayout>

    <ImageView
        android:id="@+id/imgGlobe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_gravity="end|center_horizontal|center_vertical"
        android:layout_marginEnd="@dimen/eight_dp"
        android:gravity="center_vertical|end|center_horizontal"
        android:src="@drawable/ic_baseline_globe_32"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_filter"
        style="@style/BlackText.Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|center_vertical"
        android:layout_marginRight="16dp"
        android:text="@string/filter"
        android:visibility="gone" />


</androidx.appcompat.widget.Toolbar>
