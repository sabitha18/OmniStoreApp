<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:camomile="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rltmain"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/linMainLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/linLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/relImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:visibility="visible">


                <ProgressBar
                    android:id="@+id/spin"
                    android:layout_width="@dimen/thirty_dp"
                    android:layout_height="@dimen/thirty_dp"
                    android:layout_centerInParent="true"
                    android:layout_margin="@dimen/eight_dp"
                    />


                <ImageView
                    android:id="@+id/imgProduct"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/imgMatchSale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/corner_radius"
                    android:layout_marginStart="@dimen/corner_radius"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/txtMatchSale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:background="@color/sale_bg"
                    android:gravity="center"
                    android:paddingBottom="@dimen/seven_dp"
                    android:paddingStart="@dimen/eight_dp"
                    android:paddingEnd="@dimen/eight_dp"
                    android:paddingTop="@dimen/seven_dp"
                    android:text="Sale"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/DescriptionTextSize"
                    android:visibility="gone" />


                <ImageView
                    android:id="@+id/imgDel"
                    android:layout_width="wrap_content"
                    android:layout_height="10dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                  style="@style/BlackText.Medium"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/txtDiscount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginEnd="@dimen/eight_dp"
                    android:layout_marginTop="@dimen/eight_dp"
                    android:background="@color/red"
                    android:gravity="center"
                    android:paddingBottom="@dimen/five_dp"
                    android:paddingStart="@dimen/eight_dp"
                    android:paddingEnd="@dimen/eight_dp"
                    android:paddingTop="@dimen/five_dp"
                    android:text="20%\nOFF"
                    android:textColor="@color/white"
                    android:textSize="@dimen/DescriptionTextSize"
                    android:visibility="gone" />

                <RelativeLayout
                    android:id="@+id/relSold"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/thirty_dp"
                    android:layout_alignBottom="@+id/imgProduct"
                    android:layout_marginBottom="@dimen/eight_dp"
                    android:background="@color/black"
                    android:gravity="center"
                    android:paddingBottom="@dimen/five_dp"
                    android:paddingStart="@dimen/seven_dp"
                    android:paddingEnd="@dimen/seven_dp"
                    android:paddingTop="@dimen/five_dp"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/txtSold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sold_out"
                        android:textColor="@color/white"
                        android:textSize="@dimen/DescriptionTextSize" />

                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relImage"
                android:padding="@dimen/eight_dp"
                android:visibility="visible">

                <TextView
                    android:id="@+id/txtProductName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:lines="2"
                    android:maxLines="2"
                    android:text=""
                  style="@style/BlackText.Medium"/>

                <RelativeLayout
                    android:id="@+id/relBottomPrice"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/thirty_dp"
                    android:gravity="center_horizontal"
                    android:layout_below="@+id/txtProductName"
                    >


                    <LinearLayout
                        android:id="@+id/lnrPrice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center_vertical|center"
                        android:layout_marginTop="@dimen/five_dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ToggleButton
                            android:id="@+id/togWishlist"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginEnd="@dimen/five_dp"
                            android:background="@drawable/favourite_toggle_black"
                            android:checked="false"
                            android:gravity="start"
                            android:textOff=""
                            android:textOn=""
                            android:visibility="visible" />

                        <TextView
                            android:id="@+id/txtPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/five_dp"
                            android:layout_marginEnd="@dimen/five_dp"
                            android:maxLines="1"
                            android:textAlignment="center"
                            android:textColor="@color/brown_text_color"
                           style="@style/BlackText.Medium" />

                        <TextView
                            android:id="@+id/txtRegularPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:text=""
                            android:layout_marginEnd="@dimen/five_dp"
                            android:textColor="@color/regular_price"
                           style="@style/BlackText.Medium"
                            android:visibility="visible" />
                        <TextView
                            android:id="@+id/txtDiscountPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/five_dp"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:text=""

                            android:visibility="gone" />
                        <ImageView
                            android:id="@+id/imgViews"
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/view"
                            android:visibility="gone" />
                    </LinearLayout>

                </RelativeLayout>


            </RelativeLayout>
        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>