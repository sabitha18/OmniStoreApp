<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/relMain"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:paddingStart="@dimen/eight_dp"
        android:paddingEnd="@dimen/eight_dp"
        android:paddingTop="@dimen/five_dp"
        android:paddingBottom="@dimen/five_dp"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgProduct"
            android:layout_width="@dimen/thirty_dp"
            android:layout_height="@dimen/forty_dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/five_dp" />

        <TextView
            android:id="@+id/txtName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/txtCount"
            android:layout_toEndOf="@id/imgProduct"
            android:ellipsize="end"
            android:gravity="center_vertical|start"
            android:textAlignment="viewStart"
            android:padding="@dimen/eight_dp"
            android:singleLine="true"
            android:text=""
            android:textAppearance="?android:attr/textAppearanceMedium"
            style="@style/BlackText.Regular" />

        <TextView
            android:id="@+id/txtCount"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:padding="@dimen/five_dp"
            android:text="200"
            android:layout_marginStart="@dimen/eight_dp"
            style="@style/OpensSansSemiBold.Medium"
            android:textColor="@color/dark_grey"
            android:layout_marginEnd="8dp"
            android:visibility="gone"
            android:src="@drawable/ic_baseline_keyboard_arrow_right_24"/>

        <ImageView
            android:id="@+id/imgNext"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:padding="@dimen/five_dp"
            android:visibility="gone"
            style="@style/RotateArrowStyle"
            android:src="@drawable/ic_baseline_keyboard_arrow_right_24"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/divider"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/navigation_divider"
        android:layout_marginStart="16dp"/>
</LinearLayout>