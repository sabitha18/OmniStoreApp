<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/dim_off_white">


        <androidx.core.widget.NestedScrollView
            android:id="@+id/nestedScrollView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toTopOf="@+id/textView26"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/lv_model"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/white_rounded_rectangle"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/textView59"
                    app:layout_constraintTop_toBottomOf="@+id/textView59">

                    <EditText
                        android:id="@+id/edt_model"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:ems="10"
                        android:maxLength="20"
                        android:fontFamily="@font/urbanist_medium"
                        android:inputType="textCapCharacters"
                        android:padding="8dp"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/imageButtonModelSubmit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        app:srcCompat="@drawable/ic_baseline_keyboard_arrow_right_32" />

                </LinearLayout>

                <HorizontalScrollView
                    android:id="@+id/horizontalScrollView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/lv_model">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/dark_violet"
                            android:orientation="horizontal"
                            android:padding="1dp">

                            <TextView
                                android:layout_width="200dp"
                                android:layout_height="wrap_content"
                                android:text="@string/sku"
                                style="@style/White.Medium"
                                android:layout_gravity="center_vertical"
                                android:layout_margin="4dp" />

                            <View
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:background="@color/light_grey" />

                            <TextView
                                android:layout_width="60dp"
                                android:layout_height="wrap_content"
                                android:text="@string/in_Stock"
                                style="@style/White.Medium"
                                android:layout_gravity="center"
                                android:gravity="center" />

                            <View
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:background="@color/light_grey" />

                            <TextView
                                android:layout_width="50dp"
                                android:layout_height="wrap_content"
                                android:text="@string/count"
                                style="@style/White.Medium"
                                android:layout_gravity="center"
                                android:layout_margin="8dp"
                                android:gravity="center" />

                            <View
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:background="@color/light_grey" />

                            <TextView
                                android:layout_width="50dp"
                                android:layout_height="wrap_content"
                                style="@style/White.Medium"
                                android:text="@string/diff"
                                android:layout_gravity="center"
                                android:layout_marginLeft="4dp"
                                android:gravity="center" />
                        </LinearLayout>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recyclerView"
                            android:layout_width="match_parent"
                            android:background="@drawable/rectangle_grey"
                            android:padding="1dp"
                            android:layout_height="match_parent" />
                    </LinearLayout>
                </HorizontalScrollView>

                <TextView
                    android:id="@+id/textView3"
                    style="@style/VioletText.Large"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:text="@string/enter_the_details"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textView59"
                    style="@style/BlackText.Medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:text="@string/model"
                    app:layout_constraintStart_toStartOf="@+id/textView3"
                    app:layout_constraintTop_toBottomOf="@+id/textView3" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_add"
            style="@style/White.Large"
            android:layout_height="wrap_content"
            android:layout_width="150dp"
            android:text="@string/add"
            android:layout_marginBottom="24dp"
            android:background="@drawable/yellow_rounded_rectangle"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tv_total_stock"
            style="@style/BlackText.Medium"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_width="0dp"
            android:background="@drawable/white_rounded_rectangle"
            android:gravity="center_horizontal"
            android:padding="8dp"
            app:layout_constraintBottom_toTopOf="@+id/btn_add"
            app:layout_constraintEnd_toEndOf="@+id/textView25"
            app:layout_constraintStart_toStartOf="@+id/textView25" />

        <TextView
            android:id="@+id/tv_total_count"
            style="@style/BlackText.Medium"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:background="@drawable/white_rounded_rectangle"
            android:gravity="center_horizontal"
            android:padding="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_total_stock"
            app:layout_constraintEnd_toEndOf="@+id/textView26"
            app:layout_constraintStart_toStartOf="@+id/textView26" />

        <TextView
            android:id="@+id/tv_total_diff"
            style="@style/BlackText.Medium"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:background="@drawable/white_rounded_rectangle"
            android:gravity="center_horizontal"
            android:padding="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_total_count"
            app:layout_constraintEnd_toEndOf="@+id/textView29"
            app:layout_constraintStart_toStartOf="@+id/textView29" />

        <TextView
            android:id="@+id/textView25"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/BlackText.Medium"
            android:layout_marginBottom="4dp"
            android:text="@string/tot_stock"
            android:layout_marginStart="16dp"
            app:layout_constraintBottom_toTopOf="@+id/tv_total_stock"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textView26"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/BlackText.Medium"
            android:layout_marginBottom="4dp"
            android:text="@string/tot_count"
            android:layout_marginStart="24dp"
            app:layout_constraintBottom_toTopOf="@+id/tv_total_count"
            app:layout_constraintStart_toEndOf="@+id/textView25" />

        <TextView
            android:id="@+id/textView29"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/BlackText.Medium"
            android:layout_marginBottom="4dp"
            android:text="@string/tot_diff"
            android:layout_marginStart="24dp"
            app:layout_constraintBottom_toTopOf="@+id/tv_total_diff"
            app:layout_constraintStart_toEndOf="@+id/textView26" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>