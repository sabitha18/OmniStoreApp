<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbar_actionbar"
        layout="@layout/toolbar_default" />

    <View
        android:id="@+id/viewDivider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/one_dp"
        android:layout_below="@+id/toolbar_actionbar"
        android:background="@color/navigation_divider" />

    <RelativeLayout
        android:id="@+id/relOption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/viewDivider"
        android:background="@color/bg_color"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingStart="@dimen/forty_dp"
        android:paddingTop="@dimen/twenty_dp"
        android:paddingEnd="@dimen/forty_dp"
        android:paddingBottom="@dimen/twenty_dp">

        <ImageView
            android:id="@+id/imgCamera"
            android:layout_width="@dimen/sixty_dp"
            android:layout_height="@dimen/fifty_dp"
            android:layout_alignParentStart="true"
            android:src="@drawable/ic_baseline_camera_alt_32" />

        <TextView
            android:id="@+id/txtCamera"
            style="@style/BlackText.Regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imgCamera"
            android:layout_alignParentStart="true"
            android:ellipsize="end"
            android:gravity="center"
            android:minWidth="@dimen/sixty_dp"
            android:text="@string/camera_ar" />

        <ImageView
            android:id="@+id/imgKeyboard"
            android:layout_width="@dimen/sixty_dp"
            android:layout_height="@dimen/fifty_dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_baseline_keyboard_32" />

        <TextView
            android:id="@+id/txtKeyBoard"
            style="@style/BlackText.Regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imgKeyboard"
            android:layout_alignParentEnd="true"
            android:ellipsize="end"
            android:gravity="center"
            android:minWidth="@dimen/sixty_dp"
            android:text="@string/keyboard" />
    </RelativeLayout>

    <io.codetail.widget.RevealFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/relOption">

