<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dim_off_white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView40"
            style="@style/VioletText.Large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="@string/enter_the_details"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView41"
            style="@style/BlackText.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/source_bin_caps"
            app:layout_constraintStart_toStartOf="@+id/textView40"
            app:layout_constraintTop_toBottomOf="@+id/textView40" />

        <LinearLayout
            android:id="@+id/lv_source_bin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/white_rounded_rectangle"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/textView41"
            app:layout_constraintTop_toBottomOf="@+id/textView41">

            <EditText
                android:id="@+id/edt_source_bin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:ems="10"
                android:fontFamily="@font/urbanist_medium"
                android:inputType="textCapCharacters"
                android:maxLength="20"
                android:padding="8dp"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/imageButtonSourceBinSubmit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                app:srcCompat="@drawable/ic_baseline_keyboard_arrow_right_32" />

        </LinearLayout>

        <TextView
            android:id="@+id/textView44"
            style="@style/BlackText.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/item_code_small"
            app:layout_constraintStart_toStartOf="@+id/lv_source_bin"
            app:layout_constraintTop_toBottomOf="@+id/lv_source_bin" />

        <LinearLayout
            android:id="@+id/lv_item_code"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/white_rounded_rectangle"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="@+id/lv_destination_bin"
            app:layout_constraintStart_toStartOf="@+id/textView44"
            app:layout_constraintTop_toBottomOf="@+id/textView44">

            <EditText
                android:id="@+id/edt_item_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:ems="10"
                android:fontFamily="@font/urbanist_medium"
                android:inputType="textCapCharacters"
                android:maxLength="20"
                android:padding="8dp"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/imageButtonItemSubmit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                app:srcCompat="@drawable/ic_baseline_keyboard_arrow_right_32" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lv_destination_bin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/white_rounded_rectangle"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="@+id/lv_source_bin"
            app:layout_constraintStart_toStartOf="@+id/textView46"
            app:layout_constraintTop_toBottomOf="@+id/textView46">

            <EditText
                android:id="@+id/edt_destination_bin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:ems="10"
                android:fontFamily="@font/urbanist_medium"
                android:inputType="textCapCharacters"
                android:maxLength="20"
                android:padding="8dp"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/imageButtonDestinationSubmit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                app:srcCompat="@drawable/ic_baseline_keyboard_arrow_right_32" />

        </LinearLayout>

        <TextView
            android:id="@+id/textView46"
            style="@style/BlackText.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/destination_bin_small"
            app:layout_constraintStart_toStartOf="@+id/textView41"
            app:layout_constraintTop_toBottomOf="@+id/lv_item_code" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_transfer"
            style="@style/White.Large"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/yellow_rounded_rectangle"
            android:text="@string/finish"
            android:textAppearance="@android:style/TextAppearance"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lv_destination_bin" />

        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/checkBoxSourceBin"
            style="@style/BlackText.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/green"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:text="@string/default_bin"
            android:textSize="12sp"
            app:layout_constraintBottom_toTopOf="@+id/lv_source_bin"
            app:layout_constraintEnd_toEndOf="@+id/lv_source_bin" />

        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/checkBoxDestinationBin"
            style="@style/BlackText.Medium"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:buttonTint="@color/green"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:text="@string/default_bin"
            android:textSize="12sp"
            app:layout_constraintBottom_toTopOf="@+id/lv_destination_bin"
            app:layout_constraintEnd_toEndOf="@+id/lv_destination_bin" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>


