<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">
<!--    android:background="@drawable/rw_rounded_rect_white"-->
    <RelativeLayout
        android:id="@+id/rw_dialog_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
       >

        <TextView
            android:id="@+id/rw_dialog_progress_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            android:layout_toEndOf="@+id/rw_dialog_progress_bar"
            android:gravity="center_horizontal"
            android:textAlignment="viewStart"
            android:textSize="@dimen/DescriptionTextSize"
            android:visibility="gone" />

        <ProgressBar
            android:id="@+id/rw_dialog_progress_bar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent" />

    </RelativeLayout>

</RelativeLayout>